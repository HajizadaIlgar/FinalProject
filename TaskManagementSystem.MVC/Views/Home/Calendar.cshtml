
@{
    ViewData["Title"] = "Calendar";
}
<style>
    /* Günlərin içində task sayını göstərən badge */
    .task-count {
        background-color: rgba(104, 77, 255, 0.85); /* Daha zərif şəffaf qırmızı */
        color: white;
        border-radius: 12px;
        padding: 3px 8px;
        font-size: 13px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 8px;
        right: 8px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.15);
        transition: all 0.2s ease-in-out;
    }

    /* Hover effekt */
    .task-count:hover {
        background-color: rgba(255, 26, 26, 1);
        transform: scale(1.1);
    }

    /* Task sayı böyük olduqda fərqli rənglər */
    .task-count.high {
        background-color: rgba(255, 153, 0, 0.85); /* Narıncı */
    }

    .task-count.critical {
        background-color: rgba(255, 0, 0, 0.85); /* Tünd qırmızı */
    }

    /* Yuxarıdakı Tasklar bölməsi */
    #task-summary {
        font-size: 16px;
        font-weight: bold;
        padding: 12px;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ff4d4d, #ff9900);
        color: rgb(82, 40, 40);
        border-radius: 8px;
        text-align: center;
        box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease-in-out;
    }

    /* Hover etdikdə effekt */
    #task-summary:hover {
        transform: scale(1.05);
    }
</style>
